{
  "manifest_version": 3,
  "name": "__MSG_extName__",
  "homepage_url": "https://github.com/stdrone/chrome-jira-gitlab",
  "description": "Jira plugin for create branches in Gitlab",
  "default_locale": "en",
  "host_permissions": [
    "*://*/browse/*"
  ],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/browse/*"
      ],
      "js": [
        "js/content.js"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "default-src 'self'; style-src 'self' 'unsafe-inline'; connect-src * data:; img-src 'self' data:;"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "__MSG_extName__",
    "default_icon": {
      "19": "icons/19.png",
      "38": "icons/38.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  }
}